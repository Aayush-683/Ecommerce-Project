<div class="navbar">
    <div class="container">
        <div class="user-info">
            <span>Welcome, <%= req.session.username %></span>
            <span>Your Location: <%= req.session.coords %></span>
        </div>
        <div class="nav-links">
            <a href="/home">Home</a>
            <a href="/stores">Stores</a>
            <% if (req.session.seller || req.session.admin) { %>
                <a href="/manage">Manage</a>
            <% } %>
            <% if (req.session.username) { %>    
                <a href="/cart">Cart</a>
                <a href="/profile">Profile</a>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/login">Login</a>
                <a href="/register">Register</a>
            <% } %>
        </div>
    </div>
</div>
